<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.2" fx:controller="com.example.attendancesystem.SelectUserController">
    <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
    <Text styleClass="h4" text="Select User" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <ChoiceBox fx:id="users" minWidth="260" prefWidth="260" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <GridPane alignment="BOTTOM_RIGHT" hgap="10" GridPane.columnIndex="0" GridPane.rowIndex="2">
        <Button onAction="#onSelectButtonClick" styleClass="btn, btn-info" text="Select" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <Button onAction="#onCancelButtonClick" styleClass="btn, btn-danger" text="Cancel" GridPane.columnIndex="1" GridPane.rowIndex="0" />
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
    </GridPane>
</GridPane>
