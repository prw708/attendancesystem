<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.2" fx:controller="com.example.attendancesystem.ChangePasswordController">
    <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>
    <Text styleClass="h4" text="Change Password" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <Label fx:id="errors" styleClass="lbl, alert-danger" visible="false" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="1" />
    <Label text="Current Password" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <PasswordField fx:id="currentPassword" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <Label text="New Password" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <PasswordField fx:id="password" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <Label text="Confirm New Password" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <PasswordField fx:id="confirmPassword" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    <GridPane alignment="BOTTOM_RIGHT" hgap="10" GridPane.columnIndex="1" GridPane.rowIndex="5">
        <Button onAction="#onChangeButtonClick" styleClass="btn, btn-info" text="Change" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <Button onAction="#onCancelButtonClick" styleClass="btn, btn-danger" text="Cancel" GridPane.columnIndex="1" GridPane.rowIndex="0" />
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
    </GridPane>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
       <RowConstraints />
   </rowConstraints>
</GridPane>
