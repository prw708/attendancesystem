<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.attendancesystem.RegisterController">
    <padding><Insets top="20" right="20" bottom="20" left="20"></Insets></padding>
    <Text styleClass="h4" text="Register" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <Label fx:id="errors" styleClass="lbl, alert-danger" visible="false" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="1" />
    <Label text="First Name" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="firstName" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <Label text="Last Name" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="lastName" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <Label text="Username" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="username" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    <Label text="Password" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <PasswordField fx:id="password" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    <Label text="Confirm Password" GridPane.columnIndex="0" GridPane.rowIndex="6" />
    <PasswordField fx:id="confirmPassword" GridPane.columnIndex="1" GridPane.rowIndex="6" />
    <GridPane alignment="BOTTOM_RIGHT" hgap="10" GridPane.columnIndex="1" GridPane.rowIndex="7">
        <Button onAction="#onLoginButtonClick" styleClass="btn" text="Login" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <Button onAction="#onRegisterButtonClick" styleClass="btn, btn-primary" text="Register" GridPane.columnIndex="1" GridPane.rowIndex="0" />
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
    </GridPane>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>